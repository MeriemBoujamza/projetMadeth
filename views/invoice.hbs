<div class="invoice p-3 mb-3">
              <!-- title row -->
              <div class="row">
                <div class="col-12">
                  <h4>
                    <i class="fas fa-globe"></i> Acosmetics shop, Inc.
                    {{!-- <small class="float-right">0202020</small> --}}
                  </h4>
                </div>
                <!-- /.col -->
              </div>
              <!-- info row -->
              <div class="row invoice-info">
                <div class="col-sm-4 invoice-col">
                  From
                  <address>
                    <strong>Acosmetics shop, Inc.</strong><br>
                    795 Folsom Ave, Suite 600<br>
                    San Francisco, CA 94107<br>
                    Phone: (804) 123-5432<br>
                    Email: info@GMAIL.com
                  </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                  To
                  <address>
                    <strong>{{rows.0.nomClient}}</strong><br>
                    {{rows.0.adresse}}<br>
                    Phone: {{rows.0.phone}}<br>
                    Email: {{rows.0.email}}<br>
                    Facebook: {{rows.0.facebook}}<br>
                    Instagram: {{rows.0.instagram}}<br>
                  </address>
                </div>
                <!-- /.col -->
                <div class="col-sm-4 invoice-col">
                  <br>
                  <b>No commande :</b> {{rows.0.noCommande}} <br>
                  <b>Date de commande:</b>  {{rows.0.date}}<br>
                  <b>status:</b>  {{rows.0.status}}<br>

                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <!-- Table row -->
              <div class="row">
                <div class="col-12 table-responsive">
                  <table class="table table-striped">
                    <thead>
                    <tr>
                      <th>Qty</th>
                      <th>Article</th>
                      <th>No #</th>                      
                      <th>Prix unitaire</th>
                       <th>Status</th>
                      <th>Remarque</th>
                    </tr>
                    </thead>
                    <tbody>

                                                    {{#each rows}}

                    <tr>
                      <td>{{this.qteArticle}}</td>
                      <td>{{this.designation}}</td>
                      <td>{{this.noArticle}}</td>
                      <td>{{this.prixUnitaire}}</td>
                      <td>{{this.articleStatus}}</td>
                    <td>{{this.remarque}}</td>
                    </tr>
              						            {{/each}}

                    </tbody>
                  </table>
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->

              <div class="row">
                <!-- accepted payments column -->
                <div class="col-6">
                  <p class="lead">METHODES DE PAIEMENT:</p>
                  <img src="../../public/dist/img/credit/visa.png" alt="Visa">
                  <img src="../../public/dist/img/credit/mastercard.png" alt="Mastercard">
                  <img src="../../public/dist/img/credit/paypal2.png" alt="Paypal">

                  <p class="text-muted well well-sm shadow-none" style="margin-top: 10px;">
                                       Vous pouvez egalement payer en espece ou bien en utilisant les points ou avec un cheque cadeau.

                    
                    contactez nous pour plus d'informations.          
                  </p>
                </div>
                <!-- /.col -->
                <div class="col-6">

                  <div class="table-responsive">
                    <table class="table">
                      <tbody><tr>
                        <th style="width:50%">Montant de la commande:</th>
                        <td>${{rows.0.totalCommande}}</td>
                      </tr>
                      <tr>
                        <th>Frais de service:</th>
                        <td>$00.0</td>
                      </tr>
                      <tr>
                        <th>Frais de livraison:</th>
                        <td>$0.00</td>
                      </tr>
                      <tr>
                        <th>Remise:</th>
                        <td>$0.00</td>
                      </tr>
                       <tr>
                        <th>Depot:</th>
                        <td>$0.00</td>
                      </tr>
                       <tr>
                        <th>Total:</th>
                        <td>${{rows.0.totalCommande}}</td>
                      </tr>
                    </tbody></table>
                  </div>
                </div>
                <!-- /.col -->
              </div>
              <!-- /.row -->
            </div>